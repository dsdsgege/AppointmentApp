<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/hospital_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hospitals_doctors_HospitalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kórház neve"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvNewDoctorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orvos neve:"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingBottom="4dp" />

        <EditText
        android:id="@+id/etNewDoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pl. Dr. Kiss Péter"
        android:textColor="@color/lightyellow"
        android:textColorHint="@color/lightyellow"
        android:background="@drawable/rounded_edit_text_bg"            android:padding="10dp"
        android:layout_marginBottom="8dp" />

        <Button
        android:id="@+id/btnAddDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orvos hozzáadása"
        android:textAllCaps="false"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/dark"
        android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
