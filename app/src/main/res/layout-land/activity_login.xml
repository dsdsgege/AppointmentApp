<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/login" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:padding="20dp" android:background="@drawable/login_background" tools:context=".activites.LoginActivity">

    <LinearLayout
        android:layout_width="1666dp"
        android:layout_height="1300dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_account_box" />

        <EditText
            android:id="@+id/logEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_edit_text_bg"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellow" />


        <EditText
            android:id="@+id/logPassEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/rounded_edit_text_bg"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellow" />

        <Button
            android:id="@+id/logButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:backgroundTint="@color/dark"
            android:onClick="executeLogButton"
            android:padding="12dp"
            android:text="@string/login"
            android:textColor="@color/yellow"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:onClick="googleLoginButton"
            android:src="@drawable/google_icon_logo">

        </ImageView>

        <Button
            android:id="@+id/goToRegButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:backgroundTint="@color/dark"
            android:onClick="goToReg"
            android:padding="12dp"
            android:text="@string/goToReg"
            android:textColor="@color/yellow"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>